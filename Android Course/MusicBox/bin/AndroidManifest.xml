<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="da.chuan.musicbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/music_box_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="da.chuan.musicbox.MainActivity"
            android:label="@string/app_name"
            android:icon="@drawable/music_box_logo"
            android:windowNoTitle="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="da.chuan.musicbox.ScannActivity"
            android:label="@string/app_name"
            android:windowNoTitle="true" >
        </activity>

        <service android:name="da.chuan.musicbox.service.MusicService" >
        </service>
    </application>

</manifest>